<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.RecipeGPT" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/purplePrimary</item>
        <item name="colorPrimaryVariant">@color/purpleDark</item>
        <item name="colorSecondary">@color/greenPrimary</item>
        <item name="colorSecondaryVariant">@color/tealDark</item>

        <!-- Background and Surfaces -->
        <item name="android:background">@color/whiteBackground</item>
        <item name="colorSurface">@color/lightGraySurface</item>

        <!-- Text Colors -->
        <item name="colorOnPrimary">@color/whiteOnPrimary</item>
        <item name="colorOnSecondary">@color/blackOnSecondary</item>
        <item name="colorOnBackground">@color/blackOnBackground</item>
        <item name="colorOnSurface">@color/blackOnSurface</item>

        <!-- Error -->
        <item name="colorError">@color/redError</item>
        <item name="colorOnError">@color/whiteOnError</item>

        <!-- StatusBar and NavigationBar -->
        <item name="android:statusBarColor">@color/purpleDark</item>
        <item name="android:navigationBarColor">@color/whiteOnPrimary</item>
    </style>
</resources>
