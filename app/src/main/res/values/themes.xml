<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.RecipeGPT" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Make keyboard cover UI instead of push it-->
        <item name="android:windowSoftInputMode">stateHidden|adjustPan</item>


        <!-- Primary Colors -->
        <item name="colorPrimary">@color/purplePrimary</item>
        <item name="colorPrimaryVariant">@color/purpleDark</item>
        <item name="colorSecondary">@color/greenPrimary</item>
        <item name="colorSecondaryVariant">@color/tealDark</item>

        <!-- Background and Surfaces -->
        <item name="background">@color/white</item>
        <item name="colorSurface">@color/lightGray</item>

        <!-- Text Colors -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorTertiary">@color/grayDark</item>
        <item name="colorSecondaryContainer">@color/purplePrimary</item>

        <!-- Error -->
        <item name="colorError">@color/redDark</item>
        <item name="colorOnError">@color/white</item>

        <!-- StatusBar and NavigationBar -->
        <item name="android:statusBarColor">@color/purpleDark</item>
        <item name="android:navigationBarColor">@color/white</item>

        <!-- Progress Bars -->
        <item name="colorAccent">@color/purplePrimary</item>
    </style>
    <style name="BottomNavLabel" parent="TextAppearance.AppCompat.Caption">
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:singleLine">false</item>
        <item name="android:breakStrategy">balanced</item> <!-- Prevents odd word breaks -->
    </style>

</resources>

